{
  "name": "react-smartv",
  "version": "0.0.0",
  "description": "React Render to build interfaces using Lightning",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/*",
    "src/*",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf build || true",
    "build": "npm run clean && npm run typecheck && tsup",
    "watch": "concurrently --kill-others \"tsup --watch\" \"tsc -b --watch\"",
    "dev": "npm run clean && npm run watch",
    "prettier": "prettier --write \"src/**/*.{js,ts}\"",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-reconciler": "^0.29.2",
    "tsup": "^8.1.1"
  },
  "devDependencies": {
    "@swc/core": "^1.6.13",
    "@types/eslint": "^8.56.10",
    "@types/react-reconciler": "^0.28.8",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.34.4",
    "prettier": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@lightningjs/renderer": "^1.0.0",
    "react": "^18.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmelati/react-smartv.git"
  },
  "keywords": [
    "react",
    "smartv",
    "renderer",
    "canvas",
    "WebGL",
    "tv",
    "lightning"
  ],
  "author": "Leonardo Melati <leonardomelati@gmail.com>",
  "bugs": {
    "url": "https://github.com/lmelati/react-smartv/issues"
  },
  "homepage": "https://github.com/lmelati/react-smartv#readme"
}
